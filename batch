# Define file paths
$inputFile = "C:\path\to\your\input_file.txt"
$outputFile = "C:\path\to\your\output_file.txt"

# Process the file in chunks (e.g., 1000 lines at a time) for efficiency
Get-Content $inputFile -ReadCount 1000 | ForEach-Object {
    $_ -replace '~', ',' | Add-Content $outputFile

}
